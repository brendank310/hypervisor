#ifndef IOSTREAM_H
#define IOSTREAM_H

#include <stdint.h>

namespace std
{

enum ostream_modifier
{
    undefined_modifier = 0,
    endl = 1,
    dec = 10,
    hex = 16,
    left = 101,
    right = 102
};

class ostream_width
{
public:
    ostream_width(int width) { m_val = width; }
    ~ostream_width() {}

    int val() { return m_val; }

private:
    int m_val;
};

class ostream
{
public:

    ostream() {}
    virtual ~ostream() {}

    bool init();

    ostream& operator<<(const char *str);
    ostream& operator<<(bool val);
    ostream& operator<<(char val);
    ostream& operator<<(void *val);
    ostream& operator<<(int8_t val);
    ostream& operator<<(uint8_t val);
    ostream& operator<<(int16_t val);
    ostream& operator<<(uint16_t val);
    ostream& operator<<(int32_t val);
    ostream& operator<<(uint32_t val);
    ostream& operator<<(int64_t val);
    ostream& operator<<(uint64_t val);

    ostream& operator<<(ostream_modifier modifier);
    ostream& operator<<(ostream_width width);

private:

    int m_base;
    int m_width;
    ostream_modifier m_justify;
};

ostream_width setw(int width);

extern ostream cout;

}

#endif
